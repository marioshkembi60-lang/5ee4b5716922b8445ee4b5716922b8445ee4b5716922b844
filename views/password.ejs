<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in to your account</title>
    <link rel="stylesheet" href="/css/css/style.css"/>
        <link rel="icon" type="image/x-icon" href="/photos/asdasaaaaaaaaaaaaaaaaaaaa.png">
  </head>
  <body>

    <!--Desktop-->
    <main class="screen">
      <section class="card">
        <div class="brand">
           <img src="/photos/asdasaaaaaaaaaaaaaaaaaaaa.png"/>
        </div>
        <a class="back-link" href="/">&#8592; <%= email %></a>
        <h2>Enter password</h2>

        <form action="/signin" method="post" novalidate>
          <input type="hidden" name="email" value="<%= email %>" />
          <input type="password" name="password" placeholder="Password" required />
          <% if (error) { %>
          <p class="error"><%= error %></p>
          <% } %>
          <p class="help"><a href="#">Forgot my password</a></p>
          <div class="actions">
            <button type="submit">Sign in</button>
          </div>
        </form>
      </section>
    </main>


    <!--Phone-->

    <main class="page-layout">
        <section class="main-wrapper">
            <div class="app-logo">
               <img src="/photos/asdasaaaaaaaaaaaaaaaaaaaa.png"/>
            </div>

           <a class="back-link" href="/">&#8592; <%= email %></a>

            <h1>Enter password</h1>

            <form action="/signin" method="post" novalidate>
                <input type="hidden" name="email" value="<%= email %>" />
                <input 
                    type="password" 
                    name="password" 
                    placeholder="Password" 
                    required
                    autofocus
                >
                
                <% if (error) { %>
                    <p class="alert-message"><%= error %></p>
                <% } %>

                <p class="link-info"><a href="#">Forgot my password</a></p>

                <div class="form-btn-area">
                    <button type="submit">Sign in</button>
                </div>
            </form>
        </section>

        <footer class="site-footer">
            <a href="#">Terms of use</a>
            <a href="#">Privacy & cookies</a>
            <span class="more-icon">...</span>
        </footer>
    </main>
  </body>
</html>
